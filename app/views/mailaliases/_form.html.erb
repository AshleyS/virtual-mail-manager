<%= form_for [@domain, @mailalias] do |f| %>
  <% if @mailalias.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mailalias.errors.count, "error") %> prohibited this mailalias from being saved:</h2>

      <ul>
      <% @mailalias.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= hidden_field :mailalias, :domain_id %>

  <div class="field">
    <%= f.label :source %><br />
    <%= f.text_field :source, :autocomplete => :off %><span>@<%= @domain.name %></span>
  </div>
  <div class="field">
    <%= f.label :destination %><br />
    <%= f.text_field :destination, :autocomplete => :off %>
  </div>
  <div class="actions">
    <%= f.submit %> <%= link_to "Cancel", url_for(:back) %>
  </div>
<% end %>
