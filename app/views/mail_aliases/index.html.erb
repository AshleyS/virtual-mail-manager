<% @mail_aliases.each do |mail_alias| %>
  <tr>
    <td><%= mail_alias.domain_id %></td>
    <td><%= mail_alias.source %></td>
    <td><%= mail_alias.destination %></td>
    <td><%= link_to 'Show', domain_mail_alias_path(@domain, mail_alias) %></td>
    <td><%= link_to 'Edit', edit_domain_mail_alias_path(@domain, mail_alias) %></td>
    <td><%= link_to 'Destroy', [@domain, mail_alias], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

