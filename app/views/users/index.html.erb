<h2>Users</h2>

<div style="margin: 10px 0; overflow: hidden;">
  <div style="text-align: right;">
    <%= link_to "New user", new_user_path %>
  </div>
</div>

<table>
  <tr>
    <th>ID</th>
    <th>Username</th>
  </tr>

  <% @users.each do |user| %>
      <tr class="result_row<%= cycle(" odd", "") %>">
        <td><%= user.id %></td>
        <td><%= user.username %></td>
      </tr>
  <% end %>
</table>

<br />
