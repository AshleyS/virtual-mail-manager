<h2>Users</h2>

<table>
  <tr>
    <th>ID</th>
    <th>Username</th>
    <th></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>
      <tr class="result_row<%= cycle(" odd", "") %>">
        <td><%= link_to user.id, user %></td>
        <td><%= link_to user.username, user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br />

